{
    "compilerOptions": {
      "lib": [
        "es5",
        "es6",
        "dom"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "sourceMap": false,
      "allowJs": false,
      "strictNullChecks": true,
      "jsx": "react",
      "downlevelIteration": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["src/**/*.test.ts", "src/**/*.test.tsx"]
}